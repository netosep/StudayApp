<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_main"
        tools:context=".activity.FormCadastroDisciplina">

        <View
            android:id="@+id/tituloContainer"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@color/light_green"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/topIcones"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="@id/tituloContainer"
            app:layout_constraintStart_toStartOf="@id/tituloContainer"
            app:layout_constraintEnd_toEndOf="@id/tituloContainer" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="@id/topIcones"
            app:layout_constraintTop_toTopOf="@id/topIcones"
            android:contentDescription="Voltar" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="@id/topIcones"
            app:layout_constraintEnd_toEndOf="@id/topIcones"
            android:contentDescription="Menu" />

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Nova disciplina"
            android:fontFamily="@font/poppins"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/hint_color"
            app:layout_constraintTop_toBottomOf="@id/topIcones" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewForm"
            style="@style/cardViewForm"
            app:layout_constraintTop_toBottomOf="@id/textViewTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="25dp"
                app:layout_constraintTop_toTopOf="@id/cardViewForm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    style="@style/textViewTituloForm"
                    android:text="Sobre a disciplina"/>

                <ImageView
                    style="@style/imageViewTituloForm"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/areaTituloInput">

                    <TextView
                        android:id="@+id/textViewDisciplina"
                        style="@style/textViewFormCadastro"
                        android:text="Selecione a disciplina *"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textViewDisciplinaAlert"
                        style="@style/textViewFormCadastroAlert"
                        android:text="Nome inválido!"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Spinner
                    android:id="@+id/spinnerDisciplina"
                    style="@style/EditText"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/areaTituloInput">

                    <TextView
                        android:id="@+id/textViewValor"
                        style="@style/textViewFormCadastro"
                        android:text="Custo por hora de aula *"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textViewValorAlert"
                        style="@style/textViewFormCadastroAlert"
                        android:text="Nome inválido!"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/editTextValor"
                    style="@style/EditText"
                    android:inputType="numberDecimal"
                    android:maxLength="150"
                    android:hint="00,00"/>

                <TextView
                    style="@style/textViewTituloForm"
                    android:text="Sua disponibilidade"/>

                <ImageView
                    style="@style/imageViewTituloForm"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/areaTituloInput">

                    <TextView
                        android:id="@+id/textViewDiaSemana"
                        style="@style/textViewFormCadastro"
                        android:text="Dia da semana *"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textViewDiaSemanaAlert"
                        style="@style/textViewFormCadastroAlert"
                        android:text="Nome inválido!"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Spinner
                    android:id="@+id/spinnerDiaSemana"
                    style="@style/EditText"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/areaTituloInput">

                    <TextView
                        android:id="@+id/textViewDas"
                        style="@style/textViewFormCadastro"
                        android:text="Das (hh:mm) *"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textViewDasAlert"
                        style="@style/textViewFormCadastroAlert"
                        android:text="Nome inválido!"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/editTextDas"
                    style="@style/EditText"
                    android:inputType="time"
                    android:maxLength="5"
                    android:hint="00:00"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/areaTituloInput">

                    <TextView
                        android:id="@+id/textViewAte"
                        style="@style/textViewFormCadastro"
                        android:text="Até (hh:mm) *"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textViewAteAlert"
                        style="@style/textViewFormCadastroAlert"
                        android:text="Nome inválido!"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/editTextFoto"
                    style="@style/EditText"
                    android:inputType="time"
                    android:maxLength="5"
                    android:hint="00:00"/>

                <TextView
                    android:id="@+id/textViewCamposObg"
                    style="@style/textViewAlertForm"
                    android:text="Os campos com * são obrigatórios!" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonSubmitCadastro"
                    style="@style/ButtonSubmit"
                    android:text="Salvar Cadastro" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>